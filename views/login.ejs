<%- include('partials/header'); -%>
<%- include('partials/sidebar'); -%>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/@angular/material@latest/prebuilt-themes/indigo-pink.css" rel="stylesheet">
  <form action="/login" style="border: 2px solid #0e0d10; padding: 50px; border-radius: 6px; box-shadow: #0e0d10 2px 2px 1px 2px;">
    <input type="hidden" id="csrfToken" name="_csrf" value="<%= csrfToken %>">
    <h2 class="none" style="border: 2px #0e0d10; background: #eef7ff; padding: 25px; font-weight: 300; box-shadow: #0e0d10 1px 1px 1px 2px; border-radius: 2px;">Login<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" style="margin-left: 10px; margin-right: 10px;" class="bi bi-toggle-off" viewBox="0 0 16 16">
      <path d="M11 4a4 4 0 0 1 0 8H8a4.992 4.992 0 0 0 2-4 4.992 4.992 0 0 0-2-4zm-6 8a4 4 0 1 1 0-8 4 4 0 0 1 0 8M0 8a5 5 0 0 0 5 5h6a5 5 0 0 0 0-10H5a5 5 0 0 0-5 5"/>
    </svg></h2>
    <label for="email">Email</label>
    <input type="text" class="form-control" name="email" required />
    <div class="email error"></div>
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password" required />
    <div class="password error"></div>
    <button class="mt-3" style="border: 1px #0e0d10; background: #9ed2ff; box-shadow: #0e0d10 1px 1px 1px 2px; border-radius: 3px;">login</button>
    <!-- Google Sign-In button -->
      <div id="googleSignInBtn" style="border: 1px #0e0d10; background: #9effa8; box-shadow: #0e0d10 1px 1px 1px 2px; border-radius: 3px; height: 40px; width: 100%; text-align: center; cursor: pointer; padding-top: 5px;" class="mt-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16" style="margin-right: 10px;">
        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
      </svg> Google Sign-In</div>

  </form>

  <footer>House of Pixels OPC Pvt Ltd for copyright &#169;</footer>

  <script src="https://www.gstatic.com/firebasejs/8.0.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.0.0/firebase-auth.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>

  <script type="module">

    import firebaseConfig from '/firebaseConfig.js';

    // Initialize Firebase
    firebase.initializeApp(firebaseConfig);

    firebase.auth().setPersistence(firebase.auth.Auth.Persistence.NONE)

    const form = document.querySelector('form');
    const emailError = document.querySelector('.email.error');
    const passError = document.querySelector('.password.error');
    const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // reset errors
      emailError.textContent = '';
      passError.textContent = '';

      // get values
      const email = form.email.value;
      const password = form.password.value;

      firebase.auth().signInWithEmailAndPassword(email, password)
        .then(({ user }) => {
          return user.getIdToken().then((idToken) => {
          return fetch('/login', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'CSRF-Token': csrfToken
              },
              body: JSON.stringify({ idToken, email })
            });
          })
        }).then(() => {
          return firebase.auth().signOut();
        })
        .then(() => {
          window.location.assign('/dashboard');
        }).catch((err) => {
          console.log(err);
        })
      return false;
    });

     // Google Sign-In initialization
  function initGoogleSignIn() {
    const googleSignInBtn = document.getElementById('googleSignInBtn');

    const provider = new firebase.auth.GoogleAuthProvider();

    googleSignInBtn.addEventListener('click', () => {
      firebase.auth().signInWithPopup(provider)
        .then((result) => {
          const { user } = result;
          return user.getIdToken().then((idToken) => {
           return fetch('/login', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'CSRF-Token': csrfToken
              },
              body: JSON.stringify({ idToken, email: user.email })
            });
          });
        })
        .then(() => {
          return firebase.auth().signOut();
        })
        .then(() => {
          window.location.assign('/dashboard');
        })
        .catch((err) => {
          console.log(err);
        });
    });
  }

  // Call the function to initialize Google Sign-In button
  initGoogleSignIn();
  </script>

  </body>

  </html>
